[General]

dns-server = ${servers.join(", ")}
always-real-ip = link-ip.nextdns.io

[Rule]

DOMAIN-KEYWORD,nextdns,DIRECT

[Host]

link-ip.nextdns.io = server:${servers[0]}

[Script]

network-changed script-path=https://raw.githubusercontent.com/Strangx/Shadowsocks/strange/Plugin/NextDNS/next-dns.js
